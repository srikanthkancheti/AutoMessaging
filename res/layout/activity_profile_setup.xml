<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" 
    android:background="@drawable/app_logo2">

    <ScrollView
        android:id="@+id/scrollView1"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/bottom_layout"
        android:layout_alignParentTop="true" >

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <LinearLayout
                android:id="@+id/linearLayout_profile"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:background="@color/font_color"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/textview_profile"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentTop="true"
                    android:paddingLeft="5dp"
                    android:textSize="20dp"
                    android:text="Profile Name"
                    android:textColor="#000000"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/profile_name_linearLayout"
                android:layout_width="fill_parent"
                android:layout_height="40dp"
                android:background="@drawable/background"
                android:layout_below="@+id/linearLayout_profile" >

                <TextView
                    android:id="@+id/textview_profile_name"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:layout_marginLeft="5dp"
                    android:gravity="center_vertical"
                    android:paddingLeft="5dp"
                    android:text="profile Text"
                    android:textColor="@color/font_color"
                    android:textSize="17dp"
                    android:textStyle="bold"/>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/linearLayout_Service"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/profile_name_linearLayout"
                android:background="@color/font_color"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/textview_service"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Service"
                    android:paddingLeft="5dp"
                    android:textSize="20dp"
                    android:textColor="#000000"/>
            </LinearLayout>

            <View
                android:id="@+id/view_line1"
                android:layout_width="fill_parent"
                android:layout_height="2dp"
                android:layout_below="@+id/service1_relativelayout"
                android:layout_marginTop="4dp"
                android:background="#c0c0c0" />

                <RelativeLayout
                    android:id="@+id/service2_relativelayout"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:layout_below="@+id/view_line1"
                    android:layout_marginLeft="5dp"
                    android:background="@drawable/background"
                    android:orientation="vertical" >

                    <TextView
                        android:id="@+id/auto_response_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:layout_marginTop="5dp"
                        android:text="Phone Auto Response"
                        android:textColor="@color/font_color"
                        android:textSize="17dp"
                        android:textStyle="bold"/>

                    <TextView
                        android:id="@+id/auto_response_tv2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:paddingLeft="5dp"
                        android:paddingTop="5dp"
                        android:text="Automatically respond to missed call"
                        android:textColor="#ffffff"
                        android:textSize="15dp" />

                    <ImageView
                        android:id="@+id/call_response_checkbox_imageView"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="15dp"
                        android:src="@drawable/setting_check_box_bg" />

                </RelativeLayout>



            <LinearLayout
                android:id="@+id/linearLayout_autoReply_msg"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/service2_relativelayout"
                android:background="@color/font_color"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/textview_autoReply"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Auto Reply Message"
                    android:textColor="#000000"
                    android:paddingLeft="5dp"
                    android:textSize="20dp"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/autoReply_linearlayout"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/linearLayout_autoReply_msg"
                android:orientation="horizontal" >

                <RelativeLayout
                    android:id="@+id/linearLayput_autoReply"
                    android:layout_width="fill_parent"
                    android:layout_height="90dp"
                    android:layout_marginLeft="5dp"
                    android:background="@drawable/background" >

                    <TextView
                        android:id="@+id/auto_reply_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:layout_marginTop="5dp"
                        android:text="Reply Message"
                        android:textColor="@color/font_color"
                        android:textSize="17dp"
                        android:textStyle="bold" />

                    <ImageView
                        android:id="@+id/imageView1"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="22dp"
                        android:src="@drawable/add_icon" 
                        android:layout_centerVertical="true"/>

                    <TextView
                        android:id="@+id/auto_reply_tv2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_below="@+id/auto_reply_tv"
                        android:layout_toLeftOf="@+id/imageView1"
                        android:paddingLeft="5dp"
                        android:paddingTop="5dp"
                        android:text="custom message"
                        android:textColor="#ffffff"
                        android:textSize="17dp" />

                </RelativeLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/linearLayout_autoResponse"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/autoReply_linearlayout"
                android:background="@color/font_color"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/textview_autoResponse"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Auto Response turn-ON Duration"
                    android:textColor="#000000"
                    android:textSize="20dp"
                    android:paddingLeft="5dp"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/linearLayout_replyFilter"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/relativeLayout_response_duration"
                android:background="@color/font_color"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/textview_replyFilter"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Group Settings"
                    android:textColor="#000000"
                    android:textSize="20dp"
                    android:paddingLeft="5dp"/>
            </LinearLayout>

            <RelativeLayout
                android:id="@+id/linearLayput_replyGroup"
                android:layout_width="fill_parent"
                android:layout_height="70dp"
                android:layout_below="@+id/linearLayout_replyFilter"
                android:layout_marginLeft="5dp"
                android:background="@drawable/background">

                <TextView
                    android:id="@+id/textView4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="5dp"
                    android:text="Reply Group(s)"
                    android:textColor="@color/font_color"
                    android:textSize="17dp" 
                    android:textStyle="bold"/>

                <TextView
                    android:id="@+id/reply_group_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@+id/imageView3"
                    android:layout_alignParentLeft="true"
                    android:text="group name"
                    android:textColor="#ffffff"
                    android:textSize="17dp"
                    android:paddingLeft="5dp" />

                <ImageView
                    android:id="@+id/imageView3"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_alignParentRight="true"
                    android:layout_below="@+id/textView4"
                    android:layout_marginRight="23dp"
                    android:src="@drawable/add_icon" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/service1_relativelayout"
                android:layout_width="fill_parent"
                android:layout_height="60dp"
                android:layout_alignParentLeft="true"
                android:paddingLeft="5dp"
                android:background="@drawable/background"
                android:layout_below="@+id/linearLayout_Service" >

                <TextView
                    android:id="@+id/sms_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="5dp"
                    android:text="SMS Auto Response"
                   android:textColor="@color/font_color"
                    android:textSize="17dp" 
                    android:textStyle="bold"/>

                <TextView
                    android:id="@+id/sms_tv2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignLeft="@+id/sms_tv"
                    android:layout_below="@+id/sms_tv"
                    android:text="Automatically respond to SMS"
                    android:textSize="17dp"
                    android:textColor="#ffffff" />

                <ImageView
                    android:id="@+id/sms_checkbox_imageView"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_alignBottom="@+id/sms_tv2"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="15dp"
                    android:src="@drawable/setting_check_box_bg" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/relativeLayout_response_duration"
                android:layout_width="fill_parent"
                android:layout_height="100dp"
                android:layout_alignParentLeft="true"
                android:layout_below="@+id/linearLayout_autoResponse"
                android:background="@drawable/background"
                android:clickable="true"
                android:longClickable="true" >

                <TextView
                    android:id="@+id/auto_response_onoff_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="5dp"
                    android:text="Turn On"
                    android:textColor="@color/font_color"
                    android:textSize="17dp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/auto_response_onoff_tv3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBaseline="@+id/textView2"
                    android:layout_alignBottom="@+id/textView2"
                    android:layout_alignLeft="@+id/auto_response_onoff_tv2"
                    android:paddingLeft="5dp"
                    android:textColor="#ffffff" />

                <TextView
                    android:id="@+id/auto_response_onoff_tv2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_above="@+id/auto_response_onoff_tv3"
                    android:layout_toRightOf="@+id/auto_response_onoff_tv"
                    android:paddingLeft="5dp"
                    android:textColor="#ffffff" />

                <TextView
                    android:id="@+id/textView1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignLeft="@+id/auto_response_onoff_tv"
                    android:layout_below="@+id/textView3"
                    android:paddingLeft="5dp"
                    android:text="Start:"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:textColor="#ffffff"
                    android:textSize="15dp" />

                <TextView
                    android:id="@+id/textView3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignLeft="@+id/auto_response_onoff_tv"
                    android:layout_below="@+id/auto_response_onoff_tv"
                    android:text="Set profile start and stop time."
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:textColor="#ffffff"
                    android:textSize="17dp" />

                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignLeft="@+id/textView1"
                    android:layout_below="@+id/textView1"
                    android:paddingLeft="5dp"
                    android:text="Stop:"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:textColor="#ffffff"
                    android:textSize="17dp" />

                <ImageView
                    android:id="@+id/imageView2"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_alignParentRight="true"
                    android:layout_alignBottom="@+id/textView3"
                    android:layout_marginRight="23dp"
                    android:src="@drawable/add_icon" />
            </RelativeLayout>

        </RelativeLayout>
        
    </ScrollView>

    <RelativeLayout
        android:id="@+id/bottom_layout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true" >

        <Button
            android:id="@+id/profile_setup_ok"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:background="@drawable/border_shadow"
            android:text="OK"
            android:textColor="#ffffff"
            android:textSize="20dp"
            android:textStyle="bold" />
    </RelativeLayout>

</RelativeLayout>